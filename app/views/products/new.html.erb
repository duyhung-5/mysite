<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thêm sản phẩm mới</title>
  <style>
    /* Thêm CSS cho menu */
    .navbar {
      background-color: #333;
      overflow: hidden;
    }

    .navbar a {
      float: left;
      display: block;
      color: white;
      text-align: center;
      padding: 14px 20px;
      text-decoration: none;
    }

    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }

    /* CSS cho tiêu đề */
    h1 {
      color: black;
      background-color: white;
      padding: 10px 20px;
      border-radius: 12px;
      text-align: center;
      margin: 20px auto;
      width: fit-content;
    }

    /* CSS cho form */
    .field {
      margin-bottom: 15px;
    }

    .field label {
      display: block;
      margin-bottom: 5px;
    }

    .field input, .field textarea {
      width: 100%;
      padding: 8px;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    .actions {
      text-align: center;
    }

    .actions input {
      padding: 10px 20px;
      border-radius: 12px;
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .actions input:hover {
      background-color: #45a049;
    }

    /* Hiển thị hình ảnh sản phẩm đã chọn */
    .image-preview {
      width: 150px;
      height: 150px;
      object-fit: cover;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <!-- Tiêu đề "Thêm sản phẩm mới" -->
  <h1>Thêm sản phẩm mới</h1>

  <!-- Form thêm sản phẩm -->
  <%= form_with model: @product do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="field">
      <%= form.label :featured_image, style: "display: block" %>
      <%= form.file_field :featured_image, accept: "image/*", onchange: "previewImage(event)" %>
    </div>

    <div class="field">
      <%= form.label :inventory_count %>
      <%= form.number_field :inventory_count %>
    </div>

    <div class="actions">
      <%= form.submit "Tạo sản phẩm" %>
    </div>
  <% end %>

  <!-- Hiển thị hình ảnh sản phẩm đã chọn -->
  <img id="image-preview" class="image-preview" style="display: none;" />

  <script>
    // Hàm để hiển thị hình ảnh khi người dùng chọn tệp mới
    function previewImage(event) {
      const file = event.target.files[0];
      const imagePreview = document.getElementById('image-preview');
      
      if (file) {
        const reader = new FileReader();
        reader.onload = function() {
          imagePreview.src = reader.result
          imagePreview.style.display = 'block'; // Hiển thị hình ảnh khi người dùng chọn
        };
        reader.readAsDataURL(file);
      }
    }
  </script>

</body>
</html>